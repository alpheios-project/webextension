{
  "name": "webextension",
  "version": "3.0.5",
  "build": "95",
  "description": "A WebExtension implementation of Alpheios",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "npm run build-prod && node --experimental-modules ./node_modules/alpheios-node-build/dist/build.mjs all all vue config-content-safari.mjs && npm run update-styles && npm run qa-dist",
    "build-prod": "npm run set-versions && npm run lint && npm run prod",
    "build-dev": "npm run dev",
    "build-safari": "npm run lint && node --experimental-modules ./node_modules/alpheios-node-build/dist/build.mjs all all vue config-content-safari.mjs && npm run update-styles",
    "build-safari-dev": "node --experimental-modules ./node_modules/alpheios-node-build/dist/build.mjs all development vue config-content-safari.mjs && npm run update-styles",
    "update-styles": "node --experimental-modules ./node_modules/alpheios-node-build/dist/files.mjs replace --s=./node_modules/alpheios-components/dist/style --t=dist/style",
    "auth0-code-update": "node --experimental-modules ./node_modules/alpheios-node-build/dist/files.mjs replace --s=./node_modules/auth0-chrome/dist --t=dist/support/auth0",
    "auth0-env-update": "node --experimental-modules ./node_modules/alpheios-node-build/dist/files.mjs replace --s=../protected-config/auth0/prod --t=dist --f=env-webext.js",
    "auth0-env-dev-update": "node --experimental-modules ./node_modules/alpheios-node-build/dist/files.mjs replace --s=../protected-config/auth0/dev --t=dist --f=env-webext.js",
    "auth0-safari-env-update": "node --experimental-modules ./node_modules/alpheios-node-build/dist/files.mjs replace --s=../protected-config/auth0/prod --t=src/lib/auth --f=env-safari-app-ext.js",
    "lint": "eslint --fix src/**/*.js",
    "prod": "node --experimental-modules ./node_modules/alpheios-node-build/dist/build.mjs webpack production app config.mjs",
    "dev": "node --experimental-modules ./node_modules/alpheios-node-build/dist/build.mjs webpack development app config.mjs",
    "test": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "zip": "node ./build/zip.js",
    "set-versions": "node ./scripts/set-versions.js",
    "qa-dist": "node --experimental-modules ./node_modules/alpheios-node-build/dist/files.mjs copy --s=/dist --t=qa-temp --fe=env-webext.js --clean && node --experimental-modules ./node_modules/alpheios-node-build/dist/zip.mjs --s=/qa-temp --t=qa-dist --f=qa.zip && node --experimental-modules ./node_modules/alpheios-node-build/dist/files.mjs clean --t=qa-temp"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alpheios-project/webextension.git"
  },
  "author": "The Alpheios Project, Ltd.",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alpheios-project/webextension/issues"
  },
  "homepage": "https://github.com/alpheios-project/webextension#readme",
  "devDependencies": {
    "@auth0/auth0-spa-js": "^1.6.2",
    "@babel/core": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/runtime": "^7.8.3",
    "alpheios-components": "github:alpheios-project/components",
    "alpheios-node-build": "github:alpheios-project/node-build",
    "autoprefixer": "^9.7.4",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "chalk": "^3.0.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "coveralls": "^3.0.9",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "^6.1.2",
    "file-loader": "^5.0.2",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "fs-extra": "^8.1.0",
    "html-loader": "^0.5.5",
    "html-loader-jest": "^0.2.1",
    "html-webpack-plugin": "^3.2.0",
    "imagemin": "^7.0.1",
    "imagemin-jpegtran": "^6.0.0",
    "imagemin-optipng": "^7.1.0",
    "imagemin-svgo": "^7.0.0",
    "intl-messageformat": "^2.2.0",
    "jest": "^24.9.0",
    "jest-serializer-vue": "^2.0.2",
    "jest-vue-preprocessor": "^1.6.0",
    "jsonwebtoken": "^8.5.1",
    "mini-css-extract-plugin": "^0.9.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "parallel-webpack": "^2.4.0",
    "path": "^0.12.7",
    "raw-loader": "^4.0.0",
    "sass-loader": "^8.0.2",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.1.3",
    "terser": "^4.6.3",
    "terser-webpack-plugin": "^2.3.2",
    "url-loader": "^3.0.0",
    "uuid": "^3.4.0",
    "vue": "^2.6.11",
    "vue-eslint-parser": "^7.0.0",
    "vue-jest": "^3.0.5",
    "vue-loader": "^15.8.3",
    "vue-style-loader": "^4.1.2",
    "vue-svg-loader": "^0.15.0",
    "vue-template-compiler": "^2.6.11",
    "webextension-polyfill": "^0.6.0",
    "webpack": "^4.41.5",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-dev-server": "^3.10.1",
    "webpack-merge": "^4.2.2",
    "wrap-range-text": "^1.0.1",
    "zip-a-folder": "0.0.10"
  },
  "engines": {
    "node": ">= 13.2.0",
    "npm": ">= 6.9.0"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.htmlf$": "html-loader-jest",
      "^.+\\.jsx?$": "babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/jest-vue-preprocessor"
    },
    "transformIgnorePatterns": [
      "!node_modules/alpheios-data-models/"
    ],
    "moduleNameMapper": {
      "^vue$": "vue/dist/vue.common.js"
    },
    "moduleFileExtensions": [
      "js",
      "vue"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "plugin:vue/essential"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "parser": "babel-eslint",
      "sourceType": "module",
      "ecmaVersion": 2019,
      "allowImportExportEverywhere": true
    }
  },
  "eslintIgnore": [
    "**/dist",
    "**/support"
  ],
  "dependencies": {
    "auth0-chrome": "github:alpheios-project/auth0-chrome"
  }
}
