{
  "manifest_version": 2,
  "name": "Alpheios WebExtension",
  "version": "0.0.1",
  "description": "Alpheios Reading Tools for Classical Languages.",
  "icons": {
    "32": "icons/alpheios_32.png"
  },
  "permissions": [
    "http://*/",
    "https://*/",
    "tabs",
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icons/alpheios_32.png",
    "default_title": "Activate Alpheios",
    "browser_style": true
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "web_accessible_resources": [
    "styles/style.css"
  ],
  "applications": {
    "gecko": {
      "id": "alpheios@alpheios.net"
    }
  }
}
